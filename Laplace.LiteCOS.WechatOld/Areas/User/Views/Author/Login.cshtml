

@{
    ViewBag.Title = "欢迎使用趣订货";
    Layout = "~/Views/Shared/BaseToolBarView.cshtml";
}

@*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")*@
<style>
    .validation-summary-errors {
        background: darkorange;
        color: white;
        line-height: 30px;
        padding-left: 20px;
    }
</style>

@section HtmlHeader
{
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.ValidationSummary(false, "", new { @class = "bg-danger text-danger" })

    <div style="margin:20px auto;width:100px;height:100px;border-radius:100px;overflow:hidden">
        <img src="~/images/login1.png" style="margin:0;width:100%;height:100%;">
    </div>
    <div style="padding: 0 20px">

        

        <div style="margin-bottom: 10px">
            <input id="txtName" class="easyui-textbox" name="LoginName" data-options="prompt:'请输入登录名',iconCls:'icon-man'" style="width: 100%; height: 38px"/>
        </div>
        <div>
            <input id="txtPassword" class="easyui-passwordbox" name="Password" data-options="prompt:'请输入密码'" style="width: 100%; height: 38px"/>
        </div>

        <div style="text-align: center; margin-top: 30px">
            <input type="submit" onclick="saveCookie()" value="登录" class="weui-btn weui-btn_primary"/>
        </div>
        <div style="text-align: center; margin-top: 30px">
            <a class="easyui-linkbutton" plain="true" outline="true" style="width: 100px; height: 35px" href="/User/Author/Register">
                <span style="font-size: 16px"> 注册 </span>
            </a>
        </div>

        <div style="text-align: center; margin-top: 30px">
            @Html.ActionLink("找回密码", "FindPassword")
        </div>

    </div>


}

<script>


    function init() {


        var name = Cookies.get('name'); 
        $('#txtName').textbox({
            prompt:"请输入登录名",
           // iconCls: 'icon-man',
            iconAlign: 'right',
            value:name
        });

        var pwd = Cookies.get('pwd');
        $('#txtPassword').passwordbox({
            prompt: '请输入密码',
            showEye: true,
            value:pwd
        });
    }

   


    function saveCookie() {


        //alert('LoginName'+$("[name='LoginName']").val());
        //alert('pwd' + $("[name='Password']").val());

        Cookies.set('name', $("[name='LoginName']").val());
        Cookies.set('pwd', $("[name='Password']").val());
    }

    function loadCookie() {
        
        var name = Cookies.get('name'); 
        var pwd = Cookies.get('pwd');
        alert("loading");
        $("#_easyui_textbox_input1").val(name);
        $("#_easyui_textbox_input2").val(pwd);
    }

  //  loadCookie();

    init();


</script>






