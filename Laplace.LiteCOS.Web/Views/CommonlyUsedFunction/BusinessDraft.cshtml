
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>业务草稿</title>
    <link href="~/Scripts/easyui/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Scripts/easyui/themes/icon.css" rel="stylesheet" />
</head>
<body>
    <div style="width:100%;height:40px;">
        <div style="float:left;font-size:18px;margin-left:10px;">业务草稿</div>
        <div style="float:right;margin-right:10px;">
            <a href="#" class="easyui-linkbutton" id="reflash" data-options="iconCls:'icon-reload'">刷新</a>
            <select class="easyui-combobox" style="width:100px;">
                <option>全部</option>
                <option>水果</option>
                <option>蔬菜</option>
            </select>
        </div>
    </div>
    <script src="~/Scripts/easyui/jquery.min.js"></script>
    <script src="~/Scripts/easyui/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui/locale/easyui-lang-zh_CN.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#ss').combo({
                require: true,
                width:100,
            });
            $('#comList').appendTo($('#ss').combo('panel'));
            $('#comList>div').click(function () {
                var v = $(this).text();
                $('#ss').combo('setValue', v).combo('setText', v).combo('hidePanel');
            });
        })
    </script>
</body>
</html>
