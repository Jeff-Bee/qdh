
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <style type="text/css">
        html, body {
            margin: 0;
        }

        * {
            text-decoration: none;
            list-style: none;
        }

        input::-webkit-input-placeholder {
                color:black;
        }

          input:-moz-placeholder {
              color: black;
        }

          input::-moz-placeholder {
              color: black;
             
        }

          input:-ms-input-placeholder {
              color: black;
              
        }

        img {
            border: none;
            vertical-align: middle;
        }

        .top {
            width: 100%;
            height: 50px;
            background-color: #efe9e9;
            color: #4f4f4f;
        }

        .top_left {
            float: left;
            width: 50%;
            font-weight: 700;
            line-height: 50px;
            margin-left: 30px;
        }

        .top_right {
            float: right;
            margin-right: 30px;
            line-height: 40px;
        }

        .button {
            border-radius: 15px;
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
            padding: 5px 15px;
            border: 1px solid #669985;
        }

        .center {
            width: 100%;
            clear: both;
            padding-top: 70px;
            background-color: rgb(228,228,228);
        }

        .center_left {
            width: 600px;
            float: left;
        }

        .center_right {
            float: right;
            width: 400px;
        }

        .login {
            width: 300px;
            height: 350px;
            border: 1px solid #fff;
            background-color: #fff;
        }

        .login_header {
            height: 110px;
            text-align: center;
            margin-top: 30px;
        }

        .div_row {
            width: 100%;
            margin-left: 30px;
            line-height: 30px;
            height: 30px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <form id="forn1" method="post" action="/UserCenter/Login" style="background:rgb(228,228,228)">
        <div class="top" style="min-width:1000px;width:100%;margin:0 auto;height:50px;background:rgb(248,248,248)">
            <div style="width:1000px;margin:0 auto;height:100%;">
                <div class="top_left" style="color:black;font-weight:700;"><img src="~/images/趣订货.png" /> | <span style="color:black;font-weight:700;font-size:22px;">欢迎登陆</span> </div>
                <div class="top_right" style="color:rgba(143, 143, 143, 1)">你还没有趣订货账号?<input type="button" value="注册" onclick="register()" class="button" style="margin-left:15px;color:#669985;height:25px;padding:0px 15px;width:65px;" /> </div>
            </div>
        </div>
        <div class="center" style="width:100%;margin:0 auto;">
            <div style="width:1000px;margin:0 auto;height:450px;">
                <div class="center_left"><img src="~/images/bg.png" style="width:615px;" /> </div>
                <div class="center_right">
                    <div class="login" style="margin-left:65px;background:rgb(248,248,248)">
                        <div class="login_header">
                            <img src="~/images/Logo.png" style="border-radius:50%;width:100px;" />
                        </div>
                        <div class="div_row"><img src="~/images/index_user.png" style="width:30px;margin-top:-3px;margin-right:10px;" /><input type="text" name="name" style="line-height:25px;height:25px;width:180px;" placeholder="账户/手机号/邮箱" /> </div>
                        <div class="div_row"><img src="~/images/index_pwd.png" style="width:30px;margin-top:-3px;margin-right:10px;" /><input type="password" name="pwd" style="line-height:25px;height:25px;width:180px;" placeholder="请输入密码" /> </div>
                        <div class="div_row" style="font-size: 12px;margin-left:0px;text-align:center;line-height:30px;vertical-align:middle"><input type="checkbox" />记住我 <input type="checkbox" />记住密码 <a href="/UserCenter/ForgotPassword" style="color:#669985;margin-left:5px;">忘记密码?</a> </div>
                        <div class="div_row" style="margin-left:0px;text-align:center"><input type="submit" value="登录" onclick="return LoginCheck()" style="width:200px;background-color:#669985;color:#fff;height:30px;" class="button" /> </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="~/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        function LoginCheck() {
            if ($("input[name=name]").val() == "") {
                alert('登录名不能为空');
                $("input[name=name]").focus();
                return false;
            }
            else if ($("input[name=pwd]").val() == "") {
                alert('密码不能为空');
                $("input[name=pwd]").focus();
                return false;
            }
            else {
                $("form").submit();
            }
        }

        function register() {

            location.href = "/UserCenter/Register";
        }

        $(function () {
            $("#forn1").height(document.documentElement.clientHeight);
        })
    </script>

</body>
</html>
