
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" http-equiv="X-UA-Compatible" content="IE=8" />
    <title>注册</title>
    <style type="text/css">
           html, body {
            margin: 0;
        }

        * {
            text-decoration: none;
            list-style: none;
        }

        img {
            border: none;
            vertical-align: middle;
        }

        .top {
            width: 100%;
            height: 50px;
            background-color: #efe9e9;
            color: #4f4f4f;
        }

        .top_left {
            float: left;
            width: 50%;
            font-weight: 700;
            line-height: 50px;
            margin-left: 30px;
        }

        .top_right {
            float: right;
            margin-right: 30px;
            line-height: 40px;
        }

        .button {
            border-radius: 15px;
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
            padding: 5px 15px;
            border: 1px solid #669985;
        }
        .div_row {
        line-height:35px;
        margin-top:10px;
        clear:both;
        height:35px;
        }
        .div_row_left {
        float:left;width:80px;
        text-align:left;
        }
        .txt {
        float:left;
        line-height:20px;
        }
        input[type=text] {
        height:25px;line-height:25px;
        width:170px;
        }
    </style>
</head>
<body>
    <form id="form1" method="post" action="/UserCenter/Register">
        <div class="top">
            <div style="width:1000px;margin:0 auto;height:50px;">
                <div class="top_left">趣订货| 注册账号 </div>
                <div class="top_right">已有趣订货账号?<input type="button" value="登录" onclick="ReturnLogin()" class="button" style="margin-left:15px;color:#669985;height:25px;padding:0px 15px;width:65px;" /> </div>
            </div>
            <div style="width:1000px;margin:0 auto;height:500px;text-align:center;">
                <div class="center" style="width:370px;margin:0 auto;">
                    <div class="center_top"></div>
                    <div class="div_row"><span class="div_row_left">手机</span><input type="text" onblur="CheckPhone($(this))" class="txt" name="phone" placeholder="请输入手机号" /> </div>
                    <div class="div_row"><span class="div_row_left">图片识别码</span><input type="text" class="txt" placeholder="请输入验证码图片识别码" name="verCode" /><img src="~/aspx/ValidateCode.aspx" onclick="this.src = '/aspx/ValidateCode.aspx?v=' + Math.random()" title="看不清？点击更换" style="line-height: 30px; width: 70px; height: 30px;margin-top:-10px;" /></div>
                    <div class="div_row"><span class="div_row_left">验证码</span><input type="text" class="txt" placeholder="验证码" name="jyCode" /><input type="button" style="font-size:12px;width:80px;background:#fff;border:1px solid #ccc;cursor:pointer;height:30px;" onclick="GetCheckCode()" id="getCode" value="获取验证码" /> </div>
                    <div class="div_row"><input type="checkbox" checked="checked" name="promise" />同意准守<a href="javascript:;">《趣订货服务条款》</a> </div>
                    <div class="div_row"><input type="submit" style="width:180px;background-color:#669985;color:#fff;padding:8px 15px;" onclick="return NextSubmit()" value="下一步" class="button" /> </div>
                </div>

            </div>

        </div>
    </form>
    <script src="~/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Register.js" type="text/javascript"></script>
</body>
</html>
