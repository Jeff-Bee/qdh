
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>找回密码</title>
    <style type="text/css">
        html, body {
            margin: 0;
        }

        * {
            text-decoration: none;
            list-style: none;
        }

        img {
            border: none;
            vertical-align: middle;
        }

        .top {
            width: 100%;
            height: 50px;
            background-color: #efe9e9;
            color: #4f4f4f;
        }

        .top_left {
            float: left;
            width: 50%;
            font-weight: 700;
            line-height: 50px;
            margin-left: 30px;
        }

        .top_right {
            float: right;
            margin-right: 30px;
            line-height: 40px;
        }

        .button {
            border-radius: 15px;
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
            padding: 5px 15px;
            border: 1px solid #669985;
        }

        .div_row {
            clear: both;
            height: 45px;
            overflow: hidden;
            line-height: 26px;
        }

        .div_row_left {
            float: left;
            width: 80px;
            text-align: left;
        }

        .txt {
            float: left;
            line-height: 26px;
            width: 250px;
        }

        input[type=text] {
            height: 22px;
            line-height: 22px;
        }

        .tab {
            list-style-type: none;
            float: left;
            border: solid 1px #B9C4CF;
            width: 154px;
            height: 23px;
            line-height: 23px;
            text-align: center;
            padding: 5px 20px 6px 8px;
            border-top-left-radius: 3px;
            border-top-right-radius: 3px;
            text-overflow: ellipsis;
            cursor: pointer;
        }

        .activeTab {
            color: #fff;
            border-color: #B9C4CF;
            background-color: #01aaef;
        }

        .fmenu {
            margin-left: 400px;
            height: 34px;
        }

        .ayzm {
            display: inline-block;
            padding: 0px 10px;
            height: 25px;
            cursor: pointer;
            margin-left: 30px;
            line-height: 25px;
            font-size: 14px;
            border-radius: 5px;
            border: 1px #01aaed solid;
            background:#fff;
        }

        .sub_button {
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            border: none;
            cursor: pointer;
            height: 37px;
            width: 152px;
            background: #01aaef;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <form id="form1" method="post">
        <div class="top">
            <div style="width:1000px;margin:0 auto;height:50px;">
                <div class="top_left">趣订货| 注册账号 </div>
                <div class="top_right">已有趣订货账号?<input type="button" value="登录" onclick="ReturnLogin()" class="button" style="margin-left:15px;color:#669985;height:25px;padding:0px 15px;width:65px;" /> </div>
            </div>
            <div style="width:1000px;margin:0 auto;height:500px;text-align:center;">
                <div style="height:36px;border-bottom:1px solid #666;margin-top:30px">
                    <div style="color:#666;margin-left: 10px;height: 36px;line-height: 36px;font-size: 18px;float:left;">忘记密码</div>
                    <div><ul class="fmenu"><li class="tab activeTab">手机短信找回密码</li></ul> </div>
                </div>
                <div class="center" style="width:300px;margin:0 auto;margin-top:40px;">
                    <div class="div_row" style="display:none;"><span class="div_row_left">公司名称</span><input type="text" class="txt" placeholder="请输入公司名称" name="cname" /></div>
                    <div class="div_row" style="height:30px;line-height:30px;margin"10px 0;><span class="div_row_left" style="width:100px;">注册手机号</span><input type="text" class="txt" style="width:180px;height:23px;line-height:23px;" onblur="CheckPhone($(this))" placeholder="请输入注册时使用的手机号" name="telphone" /></div>
                    <div class="div_row" style="display:none"><span class="div_row_left">验证码</span><input type="text" class="txt" placeholder="请输入验证码" style="width:125px;" name="varcode" /><input type="button" id="getCode" onclick="GetVarCode()" class="ayzm" value="获取验证码" /> </div>
                    <div class="div_row" style="margin-top:30px;"><input type="button" onclick="return ForgetPwdCheck()" value="找回密码" class="sub_button" /> </div>
                </div>
            </div>
        </div>
    </form>
    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/Register.js"></script>
</body>
</html>
