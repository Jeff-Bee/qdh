
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>地区</title>
</head>
<body>
    <div style="width:100%;">
        <div style="width:100%;height:50px;line-height:50px;font-size:20px;">
            &nbsp; &nbsp;基本信息--地区信息
        </div>
        <div>
            <div style="height:400px;border:1px solid #ddd;overflow:auto" id="Area_List">
                <table id="AreaIndex" style=""></table>
            </div>
        </div>
        <div style="width:100%;margin-top:5px;line-height:30px;">
            <span style="float:left;">
                <a class="easyui-linkbutton lbtn_a" onclick="addAreaForm()">空白新增</a>
                <a class="easyui-linkbutton lbtn_a" onclick="editAreaForm(0)">复制新增</a>
                <a class="easyui-linkbutton lbtn_a" onclick="editAreaForm(1)">修改</a>
                <a class="easyui-linkbutton lbtn_a" onclick="DelAreaRow()">删除</a>
                <a class="easyui-linkbutton lbtn_a" style="display:none">查询</a>
            </span>
            <span style="float:right;">
                <a class="easyui-linkbutton lbtn_a" style="display:none">打印(F)</a>
                <a class="easyui-linkbutton lbtn_a color_red" onclick="QuitTabs('地区信息')">退出(X)</a>
            </span>
        </div> 
    </div>
    <form id="addArea" style="display:none;height:600px;">
        <input type="hidden" id="hid_AreaId" />
        <div style="width:95%;margin:0 auto;padding:5px;border:1px solid #ccc;margin-top:2px;" class="user_top">
            <div><span class="span_left"><b style="color:red;">*</b>地区名称</span><span style="float:left"><input type="text" name="AreaAreafullname" id="Areafullname" style="width:220px;" class="userTxt" /> </span></div>
            <div><span class="span_left"><b style="color:red;">*</b>地区代码</span><span style="float:left;"><input type="text" name="Areacode" id="Areacode" class="userTxt" /> </span><span style="float:left;width:100px;margin-left:10px;"><input type="checkbox" name="isAreaasc" id="isAreaasc" />编号递增 </span> </div>
            <div><span class="span_left">备注</span><span style="float:left;"><input type="text" name="Areademo" id="Areademo" style="width:220px;" class="userTxt" /> </span> </div>
            <div style="clear:both;"></div>
        </div>
        <div style="margin-top:10px;line-height:30px;text-align:center;">
            <a class="easyui-linkbutton" onclick="SaveAreaEdit(0)" id="addAndSaveArea">保存并新增</a> <a class="easyui-linkbutton" onclick="SaveAreaEdit(1)">保存并关闭(K)</a> <a class="easyui-linkbutton" onclick="closeAreaAdd()">关闭(X)</a>
        </div>
    </form>
    <script src="~/Scripts/AreaIndex.js"></script>
</body>
</html>
