<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>添加地址</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="/vendor/bootstrap/v3/css/bs-col-sys.min.css" />
    <link rel="stylesheet" type="text/css" href="/vendor/css/ratchet.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/mobile-select-area.css">
    <link rel="stylesheet" type="text/css" href="/css/app.css">
    <link rel="stylesheet" type="text/css" href="/css/mycss.css" />
    <script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/js/function.js"></script>
    <script type="text/javascript" src="/js/dialog.js"></script>
    <script type="text/javascript" src="/js/mobile-select-area.js"></script>
    <script type="text/javascript" src="/js/mobiscroll_date.js"></script>
    <script type="text/javascript" src="/js/mobiscroll.js"></script>
    <script type="text/javascript" src="/js/baidu_count.js"></script>
</head>
<body class="addressbody">
    <div class="contbody whitebg">
        <header class="bar bar-nav bg-bule b-n">
            <a href="javascript:;" onclick="window.history.go(-1)" class="icon icon-goback pull-left"></a>
            <h1 class="title c-white">添加地址</h1>
        </header>
        <br><br>
        <div class="editbox">
            <form action='./add' id='ajaxform' method="POST">
                <ul class="edituladdress">
                    <li class="editliaddress">
                        <span class="editaddresspanIco editaddresspanIco01"></span>
                        <div class="editliaddressdiv">
                            <input type="text" value="" name="user" placeholder='姓名' class="editliaddressput editliaddressputmax" />
                        </div>
                    </li>
                    <li class="editliaddress">
                        <span class="editaddresspanIco editaddresspanIco02"></span>
                        <div class="editliaddressdiv">
                            <input type="text" value="" name="phone" placeholder='手机号码' class="editliaddressput editliaddressputmax" />
                        </div>
                    </li>
                    <li class="editliaddress">
                        <span class="editaddresspanIco editaddresspanIco03"></span>
                        <div class="editliaddressdiv">
                            <div class="editlicity clearfix">
                                <div class="">
                                    <input type="text" id="txt_area2" placeholder='住址' class="editliaddressput editliaddressputmax" name="address" readonly value="" data-value="" />
                                    <input type="hidden" id="hd_area" name="city" value="12,124,3269" />
                                    <script class="resources library" src="/js/area.js" type="text/javascript"></script>
                                    <script>
								var selectArea2 = new MobileSelectArea();
								selectArea2.init({trigger:'#txt_area2',value:$('#txt_area2').data('value'),data:json,eventName:'click'});
                                    </script>

                                </div>

                            </div>
                            <input type="text" name="address" id="address_details" value="" class="editliaddressput editliaddressputmax" />
                        </div>
                    </li>
                </ul>
                <input type="submit" name="sub" class="editliaddressbtn" value="提交" />
            </form>
        </div>
    </div>
    <script type="text/javascript">
	$(document).ready(function () {
		$(document).on('click','#ajaxform input:submit',function () {
			var MOBILE_REG = /^((\d{3}-\d{8}|\d{4}-\d{7,8})|(1[3|5|7|8][0-9]{9}))$/;
			var result = true;
			var user = $('input[name="user"]').val();
			var phone = $('input[name="phone"]').val();
			var address = $('input[name="address"]').val();
			var address_details = $('#address_details').val();
			if(user==''){
				alert('用户名不能为空');
				 result = false;
			}else if(phone==''){
				alert('电话不能为空');
				result = false;
			}else if(!MOBILE_REG.test(phone)){
				alert('手机号码不正确');
				result = false;
			} else if(address==''){
				alert('地址不能为空');
				result = false;
			}else if(address_details==''){
				alert('详细地址不能为空');
				result = false;
			}
			return result;
		})
	});
    </script>
</body>
</html>
